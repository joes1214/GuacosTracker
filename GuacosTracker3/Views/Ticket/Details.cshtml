</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Ticket.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="mt-4">
    <h4>Notes</h4>
    <hr />
</div>

<div class="row">
    <h5>Add Note:</h5>
    <div class="col-md-6">
        <form asp-action="Details">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <input asp-for="Ticket.Id" type="hidden" value="@Model.Ticket.Id" />

            </div>
            <div class="form-group">
                <label asp-for="Note.EmployeeId" class="control-label"></label>*
                <input asp-for="Note.EmployeeId" class="form-control" />
                <span asp-validation-for="Note.EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Note.Description" class="control-label"></label>*
                <textarea asp-for="Note.Description" class="form-control"></textarea>
                <span asp-validation-for="Note.Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Note.Status" class="control-label"></label>
                <select asp-for="Note.Status" class="form-control" asp-items="ProgressList.GetStatusList()">
                </select>
            </div>
            <div class="form-group mt-2 mb-4">
                <input type="submit" value="Create Note" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <hr />
</div>

<div class="row">
    <div class="col-md-6">
        <table class="table table-striped table-hover table-bordered mt-2">
            <thead>
                <tr>
                    @if (!Model.Notes.Any())
                    {
                    <tr>
                        <th>
                            No previous notes.
                        </th>
                    </tr>
                    }
                    else
                    {
                    <tr>
                        <th>
                            Notes:
                        </th>
                    </tr>

                    }

                </tr>
            </thead>
            <tbody>
                @if (Model.Notes.Any())
                {
                    @foreach (Note item in Model.Notes)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Date.ToString("MM/dd/yy")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label asp-for="Note.Description" class="control-label"></label>
                                <textarea asp-for="Note.Description" class="form-control" readonly>@item.Description</textarea>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
