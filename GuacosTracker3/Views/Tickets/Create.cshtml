@model GuacosTracker3.Models.Ticket
@using GuacosTracker3.SharedData
@*@using static GuacosTracker3.Controllers.CustomersController*@

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>



<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Tickets" asp-action="CreateTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input disabled asp-for="CustomerId" class="form-control" value="@ViewBag.CustomerId"/>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group"> @*Should be automatically pulled like CustomerID*@
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusList>()">
                    </select> @*for drop down for status*@
                @*<input asp-for="Status" class="form-control" />*@
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="control-label">
                    <input class="form-check-input" asp-for="Priority" /> @Html.DisplayNameFor(model => model.Priority)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Customers" asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
